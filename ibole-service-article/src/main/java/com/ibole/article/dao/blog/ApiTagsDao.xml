<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ibole.article.dao.blog.ApiTagsDao">

    <resultMap type="com.ibole.pojo.article.Tags" id="pojoResultMap" autoMapping="true">
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="tags_count" property="tagsCount" jdbcType="INTEGER" />
    </resultMap>

    <!--前台首页标签查询-->
    <select id="findTagsByCondition" resultMap="pojoResultMap">
        SELECT
            *
        FROM
            ar_tags
            at LEFT JOIN ( SELECT tags_id, count( * ) AS  tags_count FROM ar_article_tags  GROUP BY  tags_id ) aat ON at.id = aat.tags_id
     </select>


</mapper>